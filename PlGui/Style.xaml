<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PlGui">
    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    </Style>
    <Style TargetType="ListView" BasedOn="{StaticResource {x:Type ListView}}">
        <Setter Property="Control.HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Control.VerticalContentAlignment" Value="Stretch"/>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Background" Value="AliceBlue"/>
    </Style>
    <LinearGradientBrush x:Key="backgroundWindow">
        <GradientStop Offset="0" Color="BlanchedAlmond"/>
        <GradientStop Offset="0.33" Color="BlueViolet"/>
        <GradientStop Offset="0.66" Color="Bisque"/>
        <GradientStop Offset="1" Color="AliceBlue"/>
    </LinearGradientBrush>
</ResourceDictionary>